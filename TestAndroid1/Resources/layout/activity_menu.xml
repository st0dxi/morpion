<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout1">

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:textAlignment="center"
            android:text="joueur 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/nomJoueur1"
            android:inputType="text"
            android:text="joueur 1"
            android:layout_width="50px"
            android:layout_height="50px"
            />

        <TextView
            android:textAlignment="center"
            android:text="joueur 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/nomJoueur2"
            android:inputType="text"
            android:text="joueur 2"
            android:layout_width="50px"
            android:layout_height="50px"
            />

        <TextView
            android:textAlignment="center"
            android:text="qui qui commence ?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal
            "> 
        <TextView
            android:textAlignment="center"
                android:layout_width="10px"
                android:layout_height="10px"
                android:text="joueur 1"
                android:id="@+id/textView1Switch"
                />
            <Space
                android:layout_width="10px"
                android:layout_height="10px"
                android:id="@+id/sspace1"/>
        <Switch
                
                android:id="@+id/switchStart"
            android:layout_width="10px"
            android:layout_height="10px"
                
    android:textOff="1"
    android:textOn="2"/>
            
            <Space
                android:layout_width="10px"
                android:layout_height="10px"
                android:id="@+id/sspace2"/>
        <TextView
            android:textAlignment="center"
                android:layout_width="10px"
                android:layout_height="10px"
                android:text="joueur 1"
                android:id="@+id/textView2Switch"
                />
        </LinearLayout>

        <Button
            android:id="@+id/playBtn"
            android:text="Jouer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startGame"/>

    </LinearLayout>

</RelativeLayout>